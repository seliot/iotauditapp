// Type
//serif ?= 'Gentium Book Basic', serif
sans ?= Roboto, sans-serif
font-small ?= 12px
font-med ?= 16px
font-big ?= 22px
font-huge ?= 40px
line-height ?= 130%

// Colors
primary ?= #2e3e4e
secondary ?= #ff9800
accent ?= #2196F3
tertiary ?= #e1e1e1
quaternary ?= #212121

color-initial ?= #fff
color-black ?= #000
color-link ?= #3273dc
color-bg-link ?= #f5f5f5;

primary-text ?= #212121
secondary-text ?= lighten(primary-text, 20%)
hint-text ?= lighten(primary-text, 25%)

color-info ?= #03A9F4
color-danger ?= #f44336
color-warning ?= #ff9800
color-success ?= #4caf50
color-tag-delete ?= rgba(10, 10, 10, 0.2)

border-darker-alt ?= #dfe1e5;
border-darker ?= #e1e3e8;
border-lighter ?= #e9ecf0;

body-background ?= off-white

theme-blockquote ?= #d1d1d1

// Grid
grid-columns ?= 12

// Decorative
box-shadow-card ?= 0 2px 5px 0 rgba(0, 0, 0, 0.1), 0 2px 10px 0 rgba(0, 0, 0, 0.07)
box-shadow-float ?= 0 2px 5px 0 rgba(0, 0, 0, 0.14), 0 2px 10px 0 rgba(0, 0, 0, 0.1)
box-shadow-float-hover ?= 0 5px 11px 0 rgba(0, 0, 0, 0.16), 0 4px 15px 0 rgba(0, 0, 0, 0.13)
box-shadow-raised ?= 0 2px 5px 0 rgba(0, 0, 0, 0.14), 0 2px 10px 0 rgba(0, 0, 0, 0.1)
box-shadow-raised-hover ?= 0 5px 11px 0 rgba(0, 0, 0, 0.16), 0 4px 15px 0 rgba(0, 0, 0, 0.13)

cubic ?= cubic-bezier(.64,.09,.08,1)

border-radius-small ?= 3px
border-radius-med ?= 6px
border-radius-big ?= 10px

// Spacing
space-big ?= 40px
space-med ?= 20px
space-small ?= 10px

// Media Queries
media-med ?= 1200px
media-small ?= 900px
media-tiny ?= 520px
